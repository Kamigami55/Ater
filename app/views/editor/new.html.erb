<div class="ui two column centered grid">
	<div class="column">
		<%= form_for @document, :url => { :controller =>"editor", :action => "create" } do |f| %>

			<div class="ui massive transparent input">
			    <%= f.text_field :title, :placeholder => '標題..' %>
			</div>
			<br>
			<br>

		    <%= f.text_area :content, :class => 'redactor' %>
		    
		    <%= f.submit "建立文件", :class => 'ui right floated primary button' %>
		    <%= link_to documents_path do %>
				<button class="ui button">
					捨棄新增
				</button>
			<% end %>
		<% end %>
	</div>
</div>
